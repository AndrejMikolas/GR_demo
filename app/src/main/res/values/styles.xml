<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="user_detail_info_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="user_detail_info_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">andrej.mikolas@gmail.com</item>
    </style>

    <style name="user_detail_info_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="user_detail_fullname">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cardview_user_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="user_list_item_user_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
